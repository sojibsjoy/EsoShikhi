<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BanglaNumberActivity">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="7"
            android:orientation="horizontal">
            <Button
                android:id="@+id/banPrvsBtn"
                android:layout_width="0dp"
                android:layout_weight=".8"
                android:drawableStart="@drawable/ic_left"
                android:layout_height="90dp" />
            <TextView
                android:id="@+id/banNumView"
                android:layout_width="0dp"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/engNumTxtColor"
                android:textSize="170sp"
                android:layout_weight="5.4"
                android:layout_height="400dp" />
            <Button
                android:id="@+id/banNxtBtn"
                android:layout_width="0dp"
                android:layout_weight=".8"
                android:drawableStart="@drawable/ic_right"
                android:layout_height="90dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/banNumTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/engNumTxtColor"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:textSize="50sp"
            android:background="@color/colorPrimaryDark"/>
        <Button
            android:id="@+id/banPlayBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_play"
            android:text="@string/play_btn_text"/>
    </LinearLayout>

</ScrollView>